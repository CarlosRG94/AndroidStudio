<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--customize your theme here.-->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/azul</item>
        <item name="android:statusBarColor">#03A9F4</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EstiloBotonNumero" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="EstiloBotonOperador" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/negro</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="EstiloBotonIgual" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/negro</item>
        <item name="android:backgroundTint">#FFC107</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="EstiloBotonClear" parent="Widget.AppCompat.Button">
    <item name="android:textColor">@color/rojo</item>
    <item name="android:backgroundTint">@color/negro</item>
    <item name="android:textSize">20sp</item>
    </style>
    <style name="Estilotexto" parent="@android:style/Theme.Dialog">
    <item name="android:textColor">@color/blanco</item>
    <item name="android:backgroundTint">@color/negro</item>
    <item name="android:textSize">15sp</item>
    </style>
</resources>